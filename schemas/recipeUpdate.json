            "examples": [
                false
            ]
        },
        "style": {
            "$id": "#/properties/style",
            "type": "string",
            "title": "The style schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "IPA"
            ]
        },
        "active": {
            "$id": "#/properties/active",
            "type": "boolean",
            "title": "The active schema",
            "description": "An explanation about the purpose of this instance.",
            "default": false,
            "examples": [
                true
            ]
        },
        "instructions": {
            "$id": "#/properties/instructions",
            "type": "string",
            "title": "The instructions schema",
