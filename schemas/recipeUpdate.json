                            "default": "",
                            "examples": [
                                "Munich Malt"
                            ]
                        },
                        "quantity": {
                            "$id": "#/properties/Ingredients/items/anyOf/0/properties/quantity",
                            "type": "number",
                            "title": "The quantity schema",
                            "description": "An explanation about the purpose of this instance.",
                            "default": 0,
                            "examples": [
                                4
                            ]
                        }
                    },
                    "additionalProperties": true
                }]
            }
        }
    },
    "additionalProperties": true
