    "description": "The root schema comprises the entire JSON document.",
    "default": {},
    "examples": [{
        "Name": "Test Recipe",
        "ABV": 5.6,
        "OG": 1.062,
        "FG": 1.01,
        "IBU": 77,
        "public": false,
        "shareable": false,
