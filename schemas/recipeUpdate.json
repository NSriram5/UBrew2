                    "default": {},
                    "examples": [{
                        "key": 1,
                        "Name": "Munich Malt",
                        "quantity": 4
                    }],
                    "required": [
                        "key",
                        "Name",
                        "quantity"
                    ],
                    "properties": {
                        "key": {
                            "$id": "#/properties/Ingredients/items/anyOf/0/properties/key",
