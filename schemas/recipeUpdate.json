            "examples": [
                1.062
            ]
        },
        "FG": {
            "$id": "#/properties/FG",
            "type": "number",
            "title": "The FG schema",
            "description": "An explanation about the purpose of this instance.",
            "default": 0.0,
            "examples": [
                1.01
            ]
        },
        "IBU": {
            "$id": "#/properties/IBU",
            "type": "integer",
            "title": "The IBU schema",
            "description": "An explanation about the purpose of this instance.",
            "default": 0,
            "examples": [
                77
            ]
        },
        "public": {
            "$id": "#/properties/public",
            "type": "boolean",
            "title": "The public schema",
            "description": "An explanation about the purpose of this instance.",
